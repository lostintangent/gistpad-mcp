{
  "inputs": [
    {
      "type": "promptString",
      "password": true,
      "id": "github_token",
      "description": "Github PAT w/gist scope"
    }
  ],
  "servers": {
    "GistPad (Dev)": {
      "type": "stdio",
      "command": "node",
      "args": [
        "build/index.js",
        "--archived",
        "--starred",
        "--daily",
        "--prompts"
      ],
      "env": {
        "GITHUB_TOKEN": "${input:github_token}"
      },
      "dev": {
        "watch": "build/**/*.js",
        "debug": {
          "type": "node"
        }
      }
    }
  }
}
